extends layout

block content
  a(href="/") Return Home
  h3.
    Tracker View
  table
    tr
      th Deadline
      th Released
      th Started
      th(class="tracker_episode") Episode
      th(class="tracker_director") Director
      th Outline
      th Storyboard
      th Animation
      th Color
      th Thumbnail
      th Pencil1
      th Retime1
      th Voice
      th Retime2
      th Music
      th Retime3
      th SFX
      th Pencil2
      th Export
      th Finished
      th Duration
    each proj in projlist
      tr
        if proj.deadline
          td #{moment(proj.deadline).format("YYYY-MM-DD")}
        else
          td
        if proj.release_date
          td #{moment(proj.release_date).format("YYYY-MM-DD")}
        else
          td
        td #{moment(proj.start_date).format("YYYY-MM-DD")}
        td 
          a(href="/projects/episode/"+proj._id) #{proj.title}
        td 
          a(href="/credits/credit/"+proj.director._id) #{proj.director.name}
        td
          each stage in proj.stages
            if stage.type == 0
              a(href="/stages/stage/"+stage._id) #{stage.stage_name}
              span #{stage.primary.name}
            else
              span &nbsp;
        td
          each stage in proj.stages
            if stage.type == 1
              span #{stage.primary.name}
